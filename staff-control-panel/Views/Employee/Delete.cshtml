@model Employee

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Удаление сотрудника</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="full_name">ФИО</label>
            <input asp-for="full_name" disabled class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="birthday">Дата рождения</label>
            <input asp-for="birthday" type="date" disabled class="form-control"/>
            <span asp-validation-for="birthday" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="gender">Пол</label>
            <select asp-for="gender" class="form-control" disabled>
                <option value="" class="form-control"></option>
                <option value="Мужской" class="form-control">Мужской</option>
                <option value="Женский" class="form-control">Женский</option>
            </select>
            <span asp-validation-for="gender" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="PostId">Должность</label>
            <select id="select" asp-for="PostId" class="form-control" disabled>
                <option selected disabled>Выберете должность</option>
                <option value="Директор" class="form-control">Директор</option>
                <option value="Руководитель подразделения" class="form-control">Руководитель подразделения</option>
                <option value="Контролер" class="form-control">Контролер</option>
                <option value="Рабочий" class="form-control">Рабочий</option>
            </select>
            <span asp-validation-for="PostId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="subunit">Подразделение</label>
            <select asp-for="subunit" class="form-control" disabled>
                <option selected disabled>Выберите подразделение</option>
                <option value="Склад материалов и готовой продукции" class="form-control">Склад материалов и готовой продукции</option>
                <option value="Отдел механизации и автоматизации" class="form-control">Отдел механизации и автоматизации</option>
                <option value="Ремонтно-строительный цех" class="form-control">Ремонтно-строительный цех</option>
                <option value="Опытное производство" class="form-control">Опытное производство</option>
                <option value="Энергомеханический отдело" class="form-control">Энергомеханический отдел</option>
            </select>
            <span asp-validation-for="subunit" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <input asp-for="uniq_info" class="form-control" disabled/>
             <span asp-validation-for="uniq_info" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
